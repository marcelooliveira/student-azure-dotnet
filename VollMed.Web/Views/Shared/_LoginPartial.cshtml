<ul class="navbar-nav">
    @{
        var nameClaim = User.Claims.FirstOrDefault(c => c.Type == "name");
        var nomeUsuario = nameClaim?.Value;
    }

    @if (!string.IsNullOrWhiteSpace(nomeUsuario))
    {
        <li class="nav-item">
            <span id="manage" class="nav-link text-dark">Olá @nomeUsuario!</span>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline"
                  asp-area="Identity" asp-action="Logout" asp-controller="Home"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit"
                        class="nav-link btn btn-link text-dark border-0">
                    Logout
                </button>
            </form>
        </li>
    }
</ul>